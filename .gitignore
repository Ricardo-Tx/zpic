__pycache__/
python/source/*.c
contrib/python/source/*.c

/zpic.code-workspace

# ignore any wheels built in /dist
dist

# ignore any .py files copied into /src/zpic, but not the dunder ones
/src/zpic/*.py
!/src/zpic/__init__.py
!/src/zpic/__main__.py